#!/bin/bash

mkdir out > /dev/null 2>&1

if [ "$1" == "build" ]; then
    tsc src/github-api.ts
    tsc src/graphql.ts
    tsc src/npmjs-api.ts
    tsc src/scorecard.ts
    tsc src/contributors.ts

elif [ "$1" == "install" ]; then
    npm install

elif [ "$1" == "test" ]; then
    npm install
    bash bin/run.sh build
    python3 src/CLI.py $1
    pip install pytest-cov
    pytest --cov=test_suite
    rm -r out/*
    rm -r src/*.js

else
    ./run build
    python3 src/CLI.py $1
    rm -r out/*
    rm -r src/*.js
fi
